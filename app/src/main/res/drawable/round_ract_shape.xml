<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding android:top="2dp" android:right="4dp" android:bottom="4dp" android:left="2dp" />
            <corners android:radius="8dp" />
            <solid android:color="#a80728" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>


