<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ChecklistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="@string/blankdata"
        style="@style/CaseDetails_Title"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/ChecklistTitle_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:text="Date"
        android:layout_below="@+id/ChecklistTitle"
        android:textSize="17dp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:visibility="gone"
        />

    <CheckBox
        android:id="@+id/expend_trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:enabled="false"
        android:buttonTint="@color/colorPrimary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChecklistTitle_date"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/expandable_text"
        android:visibility="gone"
        >

        <EditText
            android:id="@+id/expended_textfield"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightGrey"
            android:hint="@string/description"
            android:padding="5dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="italic"
            android:textSize="16dp"
            />
    </LinearLayout>

</RelativeLayout>
