<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:padding="10dp"
    >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                style="@style/ReferenceID_Title"
                android:text="AB1234"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L2"
                android:layout_below="@+id/L1"
                android:layout_alignStart="@+id/L1"
                style="@style/ProjectDetails_Title"
                android:layout_marginTop="5dp"
                android:text="Project Name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L3"
                android:layout_below="@+id/L2"
                android:layout_alignStart="@+id/L1"
                style="@style/ProjectDetails_Title"
                android:layout_marginTop="5dp"
                android:text="MrD"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/R1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                style="@style/ProjectDate_Title"
                android:text="12 Jan 2018"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/R2"
                android:layout_alignEnd="@+id/R1"
                android:layout_alignBottom="@+id/L3"
                style="@style/ProjectStatus_Title"
                android:text="In Progress"
                />

</RelativeLayout>